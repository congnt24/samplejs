{
  "containerDefinitions": [
    {
      "image": "%REPOSITORY_URI%",
      "name": "%SERVICE_NAME%",
      "cpu": 0,
      "memoryReservation": null,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "ecs-log-streaming",
          "awslogs-region": "%REGION%"
        }
      }
    }
  ],
  "memory": "128",
  "taskRoleArn": null,
  "requiresCompatibilities": [
    "EC2"
  ],
  "cpu": "128"
}
